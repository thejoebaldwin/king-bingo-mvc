@{
    var profileuser = @ViewBag.profileuser;
    var hash = ViewBag.friendhash;
}

<div class="panel panel-default">
<div class="panel-body">
<div  class='row'>
    <div class='col-md-3'>
        @Html.Raw("<img width=\"100px\" src=\"data:image/jpeg;base64," + Convert.ToBase64String( profileuser.ProfileImage) + "\" />")
    </div>
    <div class='col-md-6'>
           <h3>@profileuser.Name </h3>
            @profileuser.Bio
     </div>
     <div class='col-md-3'>
         @if (ViewBag.user != null)
         {
        if (ViewBag.user.UserName != profileuser.UserName)
         {
            if (hash != null && !hash.Contains(profileuser.UserId))
            {
            <form  class="friendForm">
                <input type="hidden" name="user_id" value="@ViewBag.user.UserId" />
                <input type="hidden" name="friend_user_id" value="@ViewBag.profileuser.UserId" />
                <input type="hidden" name="authentication_token" value="@ViewBag.user.AuthenticationToken" />
                  <input type="hidden" name="operation" value="addfriend" />
                <input class="btn btn-primary" type="submit" value="Add Friend" />
            </form>
           }
         }
         }
     </div>
</div>
<div  class='row'>
     <div class='col-md-3'>
      Games
    </div>
        <div class='col-md-3'>
      Wins
    </div>
        <div class='col-md-3'>
      Rank
    </div>
        <div class='col-md-3'>
      @Html.ActionLink("Friends", "Friends",new { controller = "Profile", username = ViewContext.RouteData.Values["username"] }, null)
    </div>
     <div class='col-md-3'>
      @profileuser.GameCount
    </div>
        <div class='col-md-3'>
      @profileuser.WinCount
    </div>
        <div class='col-md-3'>
      0
    </div>
        <div class='col-md-3'>
     @profileuser.FriendCount
    </div>
    </div>
  </div>
 </div>

