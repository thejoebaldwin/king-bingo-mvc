
@{
    var user = @ViewBag.User;

}


     <div class="panel panel-default">
 <div class="panel-body">

<div  class='row'>
    <div class='col-md-3'>
        @Html.Raw("<img width=\"100px\" src=\"data:image/jpeg;base64," + Convert.ToBase64String( user.ProfileImage) + "\" />")

    </div>
    <div class='col-md-6'>
     
           <h3>@user.Name </h3>
            @user.Bio
           
      
           
        </div>

     <div class='col-md-3'>
        @if (ViewBag.CurrentUserName != user.UserName)
         {
    <input class="btn btn-primary" type="button" value="Add Friend" />
         }
         
         </div>
</div>
<div  class='row'>
     <div class='col-md-3'>
      Games
    </div>
        <div class='col-md-3'>
      Wins
    </div>
        <div class='col-md-3'>
      Rank
    </div>
        <div class='col-md-3'>
      @Html.ActionLink("Friends", "Friends",new { controller = "Profile", username = ViewContext.RouteData.Values["username"] }, null)
    </div>
     <div class='col-md-3'>
      @ViewBag.gameCount
    </div>
        <div class='col-md-3'>
      @ViewBag.winCount
    </div>
        <div class='col-md-3'>
      0
    </div>
        <div class='col-md-3'>
     @ViewBag.friendCount
    </div>

    </div>
  </div>
         </div>